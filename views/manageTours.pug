extends baseaccount
block dash  
  .user-view__content
    .tc
      h2.heading-secondary.ma-bt-md Manage Tours
    table#customers
      tr
        th Tour Name
        th Cover image
        th Location
        th Price
        th Rating
        th Actions
      each tour in tours
        tr
          td
            a(href=`/tour/${tour.slug}`)=tour.name
          td.tc
            img.table__tours-photo(src=`/img/tours/${tour.imageCover}`, alt='User photo')
          td=tour.startLocation.description
          td=`${tour.price} $`
          td=`${tour.ratingsAverage} /5`
          td.tc
            a(href=`/edit-tour/${tour.slug}`)
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-edit')
            a.deleteTour(href='#' data-tour-id=`${tour.id}`)
              svg.card__icon.di
                use(xlink:href='img/icons.svg#icon-delete')
    .tc 
      a.btn.btn--green.btn--small(href='/add-tour') Add tour




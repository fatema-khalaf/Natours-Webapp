
if page === 'home'
  .navigation-home
else
  .navigation
    input#navi-toggle(type="checkbox", class="navigation__checkbox")
    label(for="navi-toggle", class="navigation__button")
      span(class="navigation__icon")
    div(class="navigation__background")
    nav(class="navigation__nav")
      ul(class="navigation__list")
        if user
          li(class="navigation__item")
            a(href='/me' class="navigation__link")
              img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of${user.name}`)
              span= user.name.split(' ')[0]
          li(class="navigation__item")
            a(href='#' class="navigation__link nav__el--logout")
              span 01
              | LOG out
        else
          li(class="navigation__item")
            a(href='#' class="navigation__link")
              span 02
              | sign up
          li(class="navigation__item")
            a(href='/login' class="navigation__link")
              span 02
              | log in
        li(class="navigation__item")
          a(href='/' class="navigation__link")
            span 02
            | All tours
        li(class="navigation__item")
          a(href='/home' class="navigation__link")
            span 03
            | home
 
